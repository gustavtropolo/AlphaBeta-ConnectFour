{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build practice",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "practice.cpp",
                "-o",
                "practice"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build task for practice.cpp with clang++."
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++11",
                "main.cpp",
                "ConnectFour.cpp",
                "-o",
                "main",
                "$(pkg-config --libs --cflags raylib)",
                "-g"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build task for debugging C++ project with Raylib."
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++11",
                "main.cpp",
                "ConnectFour.cpp",
                "-o",
                "main",
                "$(pkg-config --libs --cflags raylib)",
                "-O2"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build task for release C++ project with Raylib."
        },
        {
            "label": "build active file",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Build task for the active file"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}